{
  "name": "sphero-connector-core",
  "version": "0.0.5",
  "description": "A thin wrapper round spherov2.js (unofficial API for Sphero® toys)",
  "keywords": [
    "cli",
    "sphero",
    "connector",
    "sphero-connector",
    "http",
    "api",
    "express"
  ],
  "author": "Christian Kühl",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chrkhl/sphero-connector-core.git"
  },
  "engines": {
    "node": "8.x"
  },
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:watch:coverage": "jest --coverage --watchAll",
    "coveralls": "jest --coverage --coverageReporters=text-lcov | coveralls",
    "lint": "eslint .",
    "lint:fix": "eslint ."
  },
  "dependencies": {
    "color-convert": "2.0.1",
    "spherov2.js": "0.0.10"
  },
  "devDependencies": {
    "coveralls": "3.1.0",
    "eslint": "7.11.0",
    "eslint-config-es": "3.24.6",
    "jest": "26.6.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/jest-setup.js"
    ]
  }
}
